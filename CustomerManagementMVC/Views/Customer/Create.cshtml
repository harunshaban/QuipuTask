@model CustomerManagementMVC.Models.Customer

<h2>Create</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate" class="control-label"></label>
        <input asp-for="BirthDate" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <!-- Addresses section -->
    <h3>Addresses</h3>
    <div class="form-group">
        <label class="control-label">Address Type</label>
        <input asp-for="Addresses[0].AddressType" class="form-control" />
        <span asp-validation-for="Addresses[0].AddressType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Address Line</label>
        <input asp-for="Addresses[0].AddressLine" class="form-control" />
        <span asp-validation-for="Addresses[0].AddressLine" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

