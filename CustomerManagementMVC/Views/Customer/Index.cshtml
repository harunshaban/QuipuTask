@model IEnumerable<CustomerManagementMVC.Models.Customer>

<h2>Clients</h2>

<p>
    <a class="btn" asp-action="Create">Create New</a>
    <a class="btn" asp-action="Import">Import Clients</a>
    <a class="btn" asp-action="Export">Export Clients</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    <a class="btn" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
